<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <WebView
    android:id="@+id/adminWebView"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

  <TextView
    android:id="@+id/offlineMessage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:text="No connection. Pull to refresh or try again."
    android:visibility="gone" />

  <com.google.android.material.button.MaterialButton
    android:id="@+id/openClientsButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:text="Notifications"
    android:textAllCaps="false" />

  <TextView
    android:id="@+id/requestsBadge"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_gravity="bottom|end"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="56dp"
    android:background="@drawable/bg_badge_circle"
    android:gravity="center"
    android:textColor="@android:color/white"
    android:textSize="11sp"
    android:textStyle="bold"
    android:visibility="gone" />

</FrameLayout>
