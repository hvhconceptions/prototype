<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:layout_marginBottom="10dp"
  android:background="#ffffff"
  android:elevation="2dp"
  android:padding="12dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <TextView
      android:id="@+id/clientName"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:textStyle="bold"
      android:textColor="#12040a"
      android:textSize="16sp" />

    <TextView
      android:id="@+id/clientSaveContact"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:text="Save"
      android:textAllCaps="true"
      android:textColor="#ffffff"
      android:paddingStart="12dp"
      android:paddingEnd="12dp"
      android:paddingTop="6dp"
      android:paddingBottom="6dp"
      android:background="#0077c8" />

    <TextView
      android:id="@+id/clientDelete"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Dismiss"
      android:textAllCaps="true"
      android:textColor="#ffffff"
      android:paddingStart="12dp"
      android:paddingEnd="12dp"
      android:paddingTop="6dp"
      android:paddingBottom="6dp"
      android:background="#ff2d93" />
  </LinearLayout>

  <TextView
    android:id="@+id/clientMeta"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#55122b"
    android:textSize="13sp"
    android:paddingTop="4dp" />

  <TextView
    android:id="@+id/clientContact"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#7a1c45"
    android:textSize="12sp"
    android:paddingTop="4dp" />
</LinearLayout>
